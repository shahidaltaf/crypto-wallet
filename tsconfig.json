{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react",
        "strict": true,
        "removeComments": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
        "allowSyntheticDefaultImports" : true,
        "moduleResolution": "node",
    },
    "include": [
        "./src/**/*"
    ],
}